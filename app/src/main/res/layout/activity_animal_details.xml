<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/animalNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/animalDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Description"
        android:layout_below="@id/animalNameTextView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/blockAnimalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Animal"
        android:layout_below="@id/animalDescTextView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
